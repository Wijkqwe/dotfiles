# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
	color_good = "#00FFFF"
        interval = 5
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "run_watch DHCP"
order += "run_watch VPNC"
order += "battery all"
# order += "cpu_temperature 0"
order += "cpu_usage"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

ipv6 {
	format_down = ""
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

run_watch DHCP {
	pidfile = "/"
	format_down = ""
}

run_watch VPNC {
	pidfile = "/"
	format_down = ""
}

battery all {
        format = "%status %percentage %remaining"
	format_down = ""
}

# cpu_temperature 0 {
#	path = ""
#	format = ""
#	format_down = ""
# }

cpu_usage {
	path = "/proc/stat"
	max_threshold = 80
	degraded_threshold = 65
	format = "all:%usage"
	format_above_threshold = "%usage"
	format_above_degraded_threshold = "%usage"
}

disk "/" {
	prefix_type = custom
	low_threshold = 4
	threshold_type = gbytes_avail
        format = "%used/%total"
	format_below_threshold = "%avail(%percentage_avail)"
}

load {
        format = "%1min"
}

memory {
	decimals = 1
        threshold_degraded = "1G"
#	threshold_critical = "500M"
        format = "%used/%total"
        format_degraded = "MEMORY"
#	format_critical = "MEMORY"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
